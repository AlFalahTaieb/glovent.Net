@model gloventApp.GUI.Models.imageModel

@{
    ViewBag.Title = "Details";
}



<style>
    .example-modal .modal {
        position: relative;
        top: auto;
        bottom: auto;
        right: auto;
        left: auto;
        display: block;
        z-index: 1;
    }

    .example-modal .modal {
        background: transparent !important;
    }
</style>
<section class="content">

 

    <div class="example-modal">
        <div class="modal modal-primary">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title">Caracteristique geniral</h4>
                    </div>
                    <div class="modal-body">
                        <p>   Name: @Html.DisplayFor(model => model.name)</p>

                        <p> Visibilite
                            @Html.DisplayFor(model => model.visib)</p>
                        
                        <p>
                            Date Visibilite
                            @Html.DisplayFor(model => model.dateinvisibl)
                        </p>
                        <p>
                            User Name
                            @Html.DisplayFor(model => model.user.fName)
                        </p>
                    </div>
                    
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->
    </div>
    <!-- /.example-modal -->

    <div class="example-modal">
        <div class="modal modal-info">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title">Like /signal info</h4>
                    </div>
                    <div class="modal-body">
                        <p>Nombre Like <i class="fa fa-thumbs-o-up"></i>:@Html.DisplayFor(model => model.aime)</p>
                        <p> Nombre Signal <i class="fa fa-thumbs-o-down"></i>: @Html.DisplayFor(model => model.danger)</p>
                        <button type="button" class="btn btn-block btn-primary"> @Html.ActionLink("Stat Image", "Statlike", new { id = Model.id })</button>
                    </div>
                    
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->
    </div>
    <div class="example-modal">
        <div class="modal modal-warning">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <h4 class="modal-title">Image</h4>
                    </div>
                    <div class="modal-body">
                      @{ string path = "~/Content/Upload/"+@Html.DisplayFor(model => model.image1)+".jpg";}
                    <img with="100" height="100" src="@Url.Content(path)" />
                        
                    </div>

                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
        <!-- /.modal -->
    </div>
   
    

</section>

