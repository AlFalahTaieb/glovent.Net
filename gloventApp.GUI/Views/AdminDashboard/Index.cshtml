@model IEnumerable<gloventApp.Data.Models.user>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h2 class="box-title">List Of Users</h2>

                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">


                        </div>
                    </div>
                </div>
            </div>
            @using (Html.BeginForm())
            {
                @Html.TextBox("fName")
                <input type="submit" name="search" value="search" />
            }

            <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">




                  
                    @*  @using (Html.BeginForm())
    {
        @Html.TextBox("FirstName")
        <input type="submit" name="search" value="search" />
    }
                    *@
                    <tr class="success">
                        <th>
                        @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.UserName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DTYPE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.AccountState)
                        </th>

                        <th>
                            @Html.DisplayNameFor(model => model.age)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.fName)
                        </th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr class="danger">
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.UserName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DTYPE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AccountState)
                            </td>

                            <td>
                                @Html.DisplayFor(modelItem => item.age)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.image)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.lName)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "EditU", new { id = item.Id }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                            </td>
                        </tr>
                    }

                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>
