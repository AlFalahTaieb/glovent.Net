@model gloventApp.Data.Models.user

@{
    ViewBag.Title = "EditU";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>EditU</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Are you sure ? </h4>
       

        <div class="form-group">
            @Html.LabelFor(model => model.AccountState, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.AccountState)
                    @Html.ValidationMessageFor(model => model.AccountState, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
