@model gloventApp.Data.Models.evente
@using Microsoft.Web.Helpers;
@using Jmelosegui.Mvc.GoogleMap
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





<center>@Html.ActionLink("Back to List", "Index")</center>

<h2>Details de l'évenement</h2>

























<div class="col-md-3" style="width:350px">

    <!-- Profile Image -->
    <div class="box box-primary">
        <div class="box-body box-profile">
            @{ string path = "~/Content/upload/" + @Html.DisplayFor(model => model.theme);}
         
            <img class="profile-user-img img-responsive img-circle" src="@Url.Content(path)" alt="User profile picture">
            <center> @Html.DisplayFor(model => model.avaibility)</center>
            <h3 class="profile-username text-center">@Html.DisplayFor(model => model.nameEvent)</h3>

            <p class="text-muted text-center">@Html.DisplayFor(model => model.localisation)</p>

            <ul class="list-group list-group-unbordered">
                <li class="list-group-item">
                    <b>Date de l'évenement</b> <a class="pull-right">@Html.DisplayFor(model => model.dateEvent)</a>
                </li>
                <li class="list-group-item">
                    <b>Nombre de participant</b> <a class="pull-right">@Html.DisplayFor(model => model.nombreParticipant)</a>
                </li>
                <li class="list-group-item">
                    <b>Organization</b> <a class="pull-right">@*@Html.DisplayFor(model => model.organization.name)*@17</a>
                </li>
                <li class="list-group-item">
                    <b>Category</b> <a class="pull-right">@Html.DisplayFor(model => model.category.Libelle)</a>
                </li>
             
               
            </ul>


            @Html.ActionLink("Edit", "Edit", null,  new { id = Model.idEvent}, new { @class = "btn btn-primary btn-block" })
            @Html.ActionLink("Delete", "Delete", null, new { id = Model.idEvent }, new { @class = "btn btn-primary btn-block" })
          
        </div>
        
       
    </div>
   



    Share: @LinkShare.GetHtml("LinkShare Example", linkSites: new[]{
        LinkShareSite.Reddit, LinkShareSite.Facebook, LinkShareSite.Twitter})
    
   




















    </div>


















<html>
<head>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyABKEj9_2l6vmFdvlSdM3KbljX7PqmKrUg"></script>


    <script>
function initialize() {
  var mapProp = {
      center:new google.maps.LatLng(@Html.DisplayFor(model => model.longi),@Html.DisplayFor(model => model.lapti)),
    zoom:3,
    mapTypeId:google.maps.MapTypeId.ROADMAP
  };
  var map=new google.maps.Map(document.getElementById("googleMap"),mapProp);
   addMarker(map);
}
google.maps.event.addDomListener(window, 'load', initialize);









function addMarker(map) {
    var marker = new google.maps.Marker({
        position: new google.maps.LatLng(@Html.DisplayFor(model => model.longi),@Html.DisplayFor(model => model.lapti)),
        map:map,

        title:"@Html.DisplayFor(model => model.nameEvent)"
    });





    }


    </script>
</head>

<body>
    <div id="googleMap" style="width:300px;height:280px;"></div>
</body>

</html>
















































