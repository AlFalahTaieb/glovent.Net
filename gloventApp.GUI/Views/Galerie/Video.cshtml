@model IEnumerable<gloventApp.GUI.Models.videoModel>

@{
    ViewBag.Title = "Video";
}

<h2>Video</h2>

<div class="box">
    <div class="box-header">
        <h3 class="box-title">Hover Data Table</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table id="example2" class="table table-bordered table-hover">
            <thead>
            <tbody>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.aime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.danger)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.url)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.visib)
                    </th>

                    <th>Action</th>

                </tr>
            </tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.aime)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.danger)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.url)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.visib)
                    </td>

                    <td>

                        @Html.ActionLink("Details", "DetailsVideo", new { id = item.id })
                    </td>
                    <td>

                        @Html.ActionLink("Delete", "DeleteVideo", new { id = item.id })
                    </td>
                       @if (item.visib == true)
                       {
                    <td>
                        @Html.ActionLink("Invisible", "Invisiblevid", new { id = item.id })
                        
                    </td>
                       }
                       else
                       {
                    <td>

                       @Html.ActionLink("Visible", "Visiblevid", new { id = item.id })
                    </td>
                       }
                </tr>
            }

        </table>
    </div>
</div>