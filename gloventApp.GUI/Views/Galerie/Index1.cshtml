

@{
    ViewBag.Title = "Index1";
}
@using PagedList.Mvc;
@using PagedList;
@using gloventApp.GUI.Models;
@model PagedList.IPagedList<gloventApp.GUI.Models.galerieModel>
<link href="~/Content/PagedList.css" rel="stylesheet"
      type="text/css" />
<h2>Index1</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>




<div class="box">
    <div class="box-header">
        <h3 class="box-title">Hover Data Table</h3>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table id="example2" class="table table-bordered table-hover">
            <thead>
            <tbody>
                <tr>
                    <th>Name</th>
                    <th>Name EVENT</th>
                    <th>Action</th>
                </tr>

            </tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.name)</td>
                    <td>@Html.DisplayFor(modelItem => item.evente.nameEvent)</td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = item.id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.id })

                    </td>
                </tr>
            }
        </table>
    </div>
</div>
<table>
    <tr>
        <td>
            <button type="button" class="btn btn-block btn-primary">@Html.ActionLink("UpdateVisibilite", "UpdateVisibilite")</button>
        </td>

        <td>
            <button type="button" class="btn btn-block btn-primary"> @Html.ActionLink("DeleteInvisible", "DeleteInvisible")</button>
        </td>
        <td>
            <button type="button" class="btn btn-block btn-primary"> @Html.ActionLink("GeneratePDF", "PrintInvoice")</button>
        </td>
    </tr>

</table>


<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
<style type="text/css">
    <div id="map-canvas" > </div >
</style>
<script src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>
<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&libraries=places"></script>
<script src="~/Scripts/map.js"></script>
<br />
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, page => Url.Action("Index1", new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))